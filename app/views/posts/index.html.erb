<div class="container wow fadeInUp titulo">
  <div class="row justify-content-center">
    <div class="col-xs-12">
      <div class="section-header">
        <h1 class="section-title">Blog</h1>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
      <div class="col-xs-12 col-md-12">
        <% if notice %>
          <p class="notice"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert"><%= alert %></p>
        <% end %>  
      </div>
  </div>
  <% @posts.order("created_at DESC").each do |g| %>
      <div class="row wow fadeInLeft">
        <div class="col-xs-12 col-md-12">
          <hr>
          <div class="row">
            <div class="col-xs-12 col-md-4">
              <% @pictures = Picture.where("post_id" => g[:id]) %>
              <% if @pictures.empty? %>
              <img src="<%= image_path("Placeholder.png") %>"/>
              <% else %>
              <img src="<%= image_path(@pictures[0].image) %>"/>
              <% end %>
            </div>
            <div class="col-xs-12 col-md-8">
              <h2><%= link_to g[:title], g %></h2>
              <% if g[:categories] %>
                <div class="categorias">
                  <h5>Categories: </h5>
                  <% g[:categories].each do |a| %>
                    <h6><%= a %></h6>
                  <% end %>
                  <br>
                  <br>
                </div>
              <% end %>
              <% if g[:tags] %>
                <div class="etiquetas">
                  <h5>Tags: </h5>
                  <% g[:tags].each do |b| %>
                    <h6><%= b %></h6>
                  <% end %>
                  <br>
                  <br>
                </div>
              <% end %>
              <%= g[:description].slice(0,150) %>...
            </div>
          </div>
        </div>
      </div>
  <% end %>
  <hr />
  <% if user_signed_in? %>
    <div class="row wow fadeInLeft">
        <div class="col-xs-12 col-md-12">
            <button type="button"><%= link_to "Nuevo", new_post_path %></button>
        </div>
    </div>
  <% end %>
  <div class="row wow fadeInUp justify-content-center">
    <div class="col-xs-12 col-md-12 paginacion">
      <%= paginate @posts %>
      <%= page_entries_info @posts %>
    </div>
  </div>
</div>