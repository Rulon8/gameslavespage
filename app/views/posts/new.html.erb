<div class="container wow fadeInUp titulo">
  <div class="row justify-content-center">
    <div class="col-xs-12">
      <div class="section-header">
        <h1 class="section-title">Crear Nuevo Post</h1>
      </div>
    </div>
  </div>
</div>
<section id="nuevo-post">
  <div class="container wow fadeInUp">
    <div class="row justify-content-center">
      <div class="col-xs-12 col-md-10">
        <div class="form">
          <%= form_for(@post, html: {multiple: true}) do |f| %>
            <% if @post.errors.any? %>
              <div id ="error_explanation">
                <h2> <%= pluralize(@post.error.count, "error") %> Ha ocurrido un error</h2>
                <ul>
                  <% @post.errors.full_message.each do |msg| %>
                  <li> <%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <div class=""> 
              <div class="form-group">
                Título <br />
                <%= @titulo = f.text_field :title, :class => "form-control" %> 
              </div>
              <div class="form-group">
                Descripción <br />
                <%= f.text_area :description, :class => "form-control" %> 
              </div>
              Categorías
              <%= select_tag "categorias", options_for_select([['MOBA' ,'MOBA'], ['Shooter', 'Shooter']]) %> <br /><br />
              Etiquetas
              <%= select_tag "etiquetas", options_for_select([['Arte' ,'Arte'], ['Jugabilidad', 'Jugabilidad']]) %><br /><br />
              <div class="form-group">
                Subir Imágen <br /><hr />
              </div>
                <!-- Aqui van el titulo y descripcion de imagen-->
              <div class="form-group">
                <%= f.file_field @imagen , :class => "form-control" %> <hr />
              </div>
              <div class="action">
                <%= f.submit @nombre %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>  
  </div>
</section>