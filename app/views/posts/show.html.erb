<div class="container titulo">
  <div class="row justify-content-center">
    <div class="col-xs-12">
      <div class="section-header">
        <h1 class="section-title"><%= @post.title %> </h1>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <% if notice %>
        <p class="notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert"><%= alert %></p>
      <% end %>  
    </div>
  </div>
  <% if user_signed_in? %>
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <%= link_to "Editar Post", edit_post_path(@post[:id]), class: "button" %>
            <%= link_to "Eliminar Post", post_path(@post[:id]), method: :delete, class: "button" %>
        </div>
    </div>
      <hr />
  <% end %>
  <div class="row">
    <% if @post[:title] == "New Home Page" %>
      <div class="col-xs-12 col-md-12">
    <% else %>
      <div class="col-xs-12 col-md-8 offset-md-2">
    <% end %>
     <% if @pictures.empty? %>
        <img src="<%= image_path("Placeholder.png") %>"/>
     <% else %>
        <img src="<%= image_path(@pictures[0].image) %>"/>
     <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <small><%= @post.created_at.year %>-<%= @post.created_at.month %>-<%= @post.created_at.day %> &nbsp; &nbsp; by: <%= @post.user.username %></small>
      <br>
      <small>Last modified: <%= @post.updated_at.year %>-<%= @post.updated_at.month %>-<%= @post.updated_at.day %> </small>
      <p><%= simple_format(@post.description) %></p>
    </div>
  </div>
  <!--Aqui estan pasando taquitos -->
  <% if @post.id == 51 %>
    <div class="videoWrapper">
      <iframe width="560" height="315" src="https://www.youtube.com/embed/QYKTqISda5Q" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
    </div>
  <% end %>
  <!--Siguen los taquitos -->
  <% if @post.id == 52 %>
    <div class="videoWrapper">
      <iframe width="560" height="315" src="https://www.youtube.com/embed/wbuVAdjleCo" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
    </div>
  <% end %>
 <!--Siguen los taquitos -->
  <% if @post.id == 53 %>
    <div class="videoWrapper">
      <iframe width="560" height="315" src="https://www.youtube.com/embed/0bEDPm77cdc" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
    </div>
  <% end %>
 <!--Siguen los taquitos -->
  <% if @post.id == 54 %>
    <div class="videoWrapper">
      <iframe width="560" height="315" src="https://www.youtube.com/embed/dS2lVLS3G_M" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
    </div>
  <% end %>
  <!--Aqui terminan los taquitos -->
  
  <hr />
  <% if user_signed_in? %>
    <div class="row">
        <div class="col-xs-12 col-md-12">
          <%= link_to "Editar Post", edit_post_path(@post[:id]), class: "button" %>
          <%= link_to "Eliminar Post", post_path(@post[:id]), method: :delete, class: "button" %>
        </div>
    </div>
      <hr />
  <% end %>
  <% if user_signed_in? %>
   <section id="facts">
              <div class="section-header">
                <h3 class="section-title">Facts</h3>
              </div>
              <div class="row justify-content-center counters">
      
        				<div class="col-xs-12 text-center">
                  <span data-toggle="counter-up"><%= @visitas %></span>
                  <h2>Visits</h2>
        				</div>
      
        			</div>
  <% end %>
  <span data-toggle="counter-up"></span>
  </section><!-- #facts -->
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <div class="fb-comments" data-href="https://gameslaves-rulon.c9users.io/posts/<%= @post[:id] %>" data-width="100%" data-numposts="5"></div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-12 paginacion">
  
        <%= link_to("<< Previous Post", @post.previous_post, class: "button") if !@primero %>
        <%= link_to("Next Post >>", @post.next_post, class: "button") if !@ultimo %>
      
    </div>
  </div>
</div>
