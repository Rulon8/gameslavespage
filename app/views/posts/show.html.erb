<div class="container wow fadeInUp titulo">
  <div class="row justify-content-center">
    <div class="col-xs-12">
      <div class="section-header">
        <h1 class="section-title"><%= @post.title %> </h1>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
      <div class="col-xs-12 col-md-12">
        <% if notice %>
          <p class="notice"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert"><%= alert %></p>
        <% end %>  
      </div>
  </div>
  <div class="row wow fadeInUp">
    <div class="col-xs-12 col-md-12">
       <% @pictures = Picture.where("post_id" => @post.id) %>
       <% if @pictures.empty? %>
          <img src="<%= image_path("Placeholder.png") %>"/>
       <% else %>
          <img src="<%= image_path(@pictures[0].image) %>"/>
       <% end %>
    </div>
  </div>
  <div class="row wow fadeInUp">
    <div class="col-xs-12 col-md-12">
      <p><%= @post.description %></p>
    </div>
  </div>
<hr />
 <% if user_signed_in? %>
    <div class="row wow fadeInLeft">
        <div class="col-xs-12 col-md-12">
            <button type="button"><%= link_to "Editar Post", edit_post_path(@post[:id])%></button>
            <button type="button"><%= link_to "Eliminar Post", post_path(@post[:id]), method: :delete%></button>
        </div>
    </div>
      <hr />
  <% end %>
  <div class="row wow fadeInLeft">
    <div class="col-xs-12 col-md-12">
      <div class="fb-comments" data-href="https://gameslaves-rulon.c9users.io/posts/<%= @post[:id] %>" data-width="100%" data-numposts="5"></div>
    </div>
  </div>
<%= link_to("Previous Post", @post.previous_post) %>
<%= link_to("Next Post", @post.next_post) %>
</div>
