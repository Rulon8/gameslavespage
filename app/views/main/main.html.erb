  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert"><%= alert %></p>
  <% end %>  
  <!--==========================
    Hero Section
  ============================-->
  <section id="hero">
    <div class="hero-container">
      <h1>Welcome to GameSlaves</h1>
      <h2>We are a team of game developers giving our first steps in this creative area, come and join us!</h2>
       <!-- <a href="#about" class="btn-get-started">Get Started</a> -->
    </div>
  </section><!-- #hero -->

  

  <main id="main">

    <!--==========================
      About Us Section
    ============================-->
    <section id="about">
      <div class="container">
        <div class="row about-container">

          <div class="col-xs-12 col-md-8 content wow fadeInUp a">
            <h2 class="title"><%= link_to "In Development", in_development_path %></h2>
            <img src="<%= image_path('Chloe.png') %>" />
            <p>
              Hi guys! We are developing our next game. It would be a platformer action game with lots of puzzles, skills, cool art and so much more.
            </p>
            <p>A long journey is upon us. This will be our longest and hardest game till now.</p>
            <p>The game will have a lot of exciting things and we hope to have the demo ready for january 2018. Hope you guys stay in touch.</p>
            <iframe width="100%" height="349" src="https://www.youtube.com/embed/J8bMnSsG4TY" allowfullscreen=""></iframe>
            <hr>
          </div>
          <div class="col-xs-12 col-md-1">
          </div>
          <div class="col-xs-12 col-md-3 wow fadeInRight b">
            <h2 class="title">Follow Us</h2>
            <div class="social-links">
              <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
              <a href="https://www.facebook.com/gameslavesteam/" class="facebook"><i class="fa fa-facebook"></i></a>
              <a href="#" class="instagram"><i class="fa fa-instagram"></i></a>
              <a href="#" class="google-plus"><i class="fa fa-google-plus"></i></a>
              <a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a>
            </div>
            <hr>
            <h2 class="title">Recent Posts</h2>
            <% @posts.each do |pos| %>
              <div class="row">
                <div class="col-xs-12">
                  <% @pictures = Picture.where("post_id" => pos[:id]) %>
                  <% if @pictures.empty? %>
                  <img src="<%= image_path("Placeholder.png") %>"/>
                  <% else %>
                  <img src="<%= image_path(@pictures[0].image) %>"/>
                  <% end %>
                  <h3><%= link_to pos[:title], pos %></h3>
                  <hr>
                </div>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </section><!-- #about -->

