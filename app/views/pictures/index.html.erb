<div class="container titulo">
  <div class="row justify-content-center">
    <div class="col-xs-12">
      <div class="section-header">
        <h1 class="section-title">Pictures</h1>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
      <div class="col-xs-12 col-md-12">
        <% if notice %>
          <p class="notice"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert"><%= alert %></p>
        <% end %>  
      </div>
  </div>
  <% if user_signed_in? %>
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <%= link_to "Nuevo", new_picture_path, class: "button" %>
        </div>
    </div>
  <% end %>
  <% @pictures.order("created_at DESC").each do |g| %>
      <div class="row">
        <div class="col-xs-12 col-md-12">
          <hr>
          <div class="row">
            <div class="col-xs-12 col-md-4">
              <img src="<%= image_path(g[:image]) %>"/>
               <%= link_to "Eliminar Imagen", picture_path(g[:id]), method: :delete, class: "button" %>
            </div>
            <div class="col-xs-12 col-md-8">
              <h2><%= g[:image] %></h2>
              <%= g[:description].slice(0,150) %>...
            </div>
          </div>
        </div>
      </div>
  <% end %>
  <hr />
  <% if user_signed_in? %>
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <%= link_to "Nuevo", new_picture_path, class: "button" %>
        </div>
    </div>
  <% end %>
  <div class="row justify-content-center">
    <div class="col-xs-12 col-md-12 paginacion">
      <%= paginate @pictures %>
      <br>
      <%= page_entries_info @pictures %>
    </div>
  </div>
  
</div>