<div class="container wow fadeInUp titulo">
  <div class="row justify-content-center">
    <div class="col-xs-12">
      <div class="section-header">
        <h1 class="section-title">Editar Juego</h1>
      </div>
    </div>
  </div>
</div>
<section id="editar-juego">
  <div class="container wow fadeInUp">
    <div class="row justify-content-center">
      <div class="col-xs-12 col-md-8">
        <% if notice %>
          <p class="notice"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert"><%= alert %></p>
        <% end %>  
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-xs-12 col-md-8">
        <div class="form">
          <div id="errormessage"></div>
          <%= form_for(@game) do |f| %>
            <div class="form-group">
              <%= f.text_field :name, :class => "form-control", :value => @game[:name] %>
            </div>
            <div class="form-group">
              <%= f.text_area :description, :class => "form-control", :value => @game[:description], :rows => "5" %>
            </div>
            <div class="form-group">
              <%= f.text_area :information, :class => "form-control", :value => @game[:information], :rows => "5" %>
            </div>
            <div class="form-group">
              <%= f.text_area :requirements, :class => "form-control", :value => @game[:requirements], :rows => "5" %>
            </div>
            <%= f.submit "Editar juego" %>
          <% end %>
        </div>
      </div>
    </div>  
  </div>
</section>